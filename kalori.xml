<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".kalori" >
    
    <ImageView
            android1:id="@+id/imageView1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignParentBottom="true"
            android1:layout_alignParentLeft="true"
            android1:layout_alignParentRight="true"
            android1:layout_alignParentTop="true"
            android1:scaleType="fitXY"
            android1:src="@drawable/kalorihsl" />

    <RadioGroup
        android1:id="@+id/radioGroup3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_marginLeft="16dp"
        android1:layout_toRightOf="@+id/textView1" >

        <RadioButton
            android1:id="@+id/radiolaki"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="Laki-Laki" />

        <RadioButton
            android1:id="@+id/radiopr"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="Perempuan" />
    </RadioGroup>

    <TextView
        android1:id="@+id/textView4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView2"
        android1:layout_below="@+id/textView2"
        android1:layout_marginTop="16dp"
        android1:text="Tinggi"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android1:id="@+id/textView6"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView4"
        android1:layout_below="@+id/textView4"
        android1:layout_marginTop="16dp"
        android1:text="Berat"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android1:id="@+id/editText1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView2"
        android1:layout_alignBottom="@+id/textView2"
        android1:layout_alignLeft="@+id/radioGroup3"
        android1:layout_alignRight="@+id/radioGroup3"
        android1:ems="10"
        android1:inputType="number" />

    <EditText
        android1:id="@+id/editText2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView4"
        android1:layout_alignBottom="@+id/textView4"
        android1:layout_alignLeft="@+id/editText1"
        android1:layout_alignRight="@+id/editText1"
        android1:ems="10"
        android1:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android1:id="@+id/editText3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView7"
        android1:layout_alignBottom="@+id/textView7"
        android1:layout_alignLeft="@+id/editText2"
        android1:layout_alignRight="@+id/editText2"
        android1:ems="10"
        android1:inputType="number" />

    <EditText
        android1:id="@+id/editText4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView8"
        android1:layout_alignBottom="@+id/textView8"
        android1:layout_alignLeft="@+id/editText3"
        android1:layout_alignRight="@+id/editText3"
        android1:ems="10"
        android1:inputType="number" />

    <EditText
        android1:id="@+id/editText5"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView9"
        android1:layout_alignBottom="@+id/textView9"
        android1:layout_alignLeft="@+id/editText4"
        android1:layout_alignRight="@+id/editText4"
        android1:ems="10"
        android1:inputType="number" />

    <EditText
        android1:id="@+id/editText6"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView10"
        android1:layout_alignBottom="@+id/textView10"
        android1:layout_alignLeft="@+id/editText5"
        android1:layout_alignRight="@+id/editText5"
        android1:ems="10"
        android1:inputType="number" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignTop="@+id/radioGroup3"
        android1:layout_marginLeft="16dp"
        android1:layout_marginRight="16dp"
        android1:layout_marginTop="20dp"
        android1:text="Jenis Kelamin"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android1:id="@+id/textView2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView1"
        android1:layout_below="@+id/radioGroup3"
        android1:text="Umur"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android1:id="@+id/textView8"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView6"
        android1:layout_below="@+id/editText3"
        android1:layout_marginTop="16dp"
        android1:text="Leher"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android1:id="@+id/textView9"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView8"
        android1:layout_below="@+id/editText4"
        android1:layout_marginTop="16dp"
        android1:text="Pinggang"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android1:id="@+id/textView10"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView9"
        android1:layout_below="@+id/editText5"
        android1:layout_marginTop="16dp"
        android1:text="Pinggul"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android1:id="@+id/textView13"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignBottom="@+id/textView10"
            android1:layout_toRightOf="@+id/editText6"
            android1:text="CM" />

        <TextView
            android1:id="@+id/textView12"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_above="@+id/textView10"
            android1:layout_toRightOf="@+id/editText5"
            android1:text="CM" />

        <TextView
            android1:id="@+id/textView11"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_above="@+id/textView9"
            android1:layout_toRightOf="@+id/editText4"
            android1:text="CM" />

        <TextView
            android1:id="@+id/textView7"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignBaseline="@+id/textView6"
            android1:layout_alignBottom="@+id/textView6"
            android1:layout_alignLeft="@+id/textView11"
            android1:text="KG" />

        <TextView
            android1:id="@+id/textView5"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignBottom="@+id/textView4"
            android1:layout_alignLeft="@+id/textView7"
            android1:text="CM" />

        <TextView
            android1:id="@+id/textView3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_above="@+id/textView4"
            android1:layout_alignLeft="@+id/textView5"
            android1:text="TH" />

        <RadioGroup
            android1:id="@+id/radioGroup1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_above="@+id/button2"
            android1:layout_marginBottom="20dp"
            android1:layout_marginRight="16dp"
            android1:layout_alignLeft="@+id/editText6"
            android1:layout_alignRight="@+id/editText6"
            android1:orientation="vertical" >

            <RadioButton
                android1:id="@+id/radio0"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:checked="true"
                android1:text="Ringan" />

            <RadioButton
                android1:id="@+id/radio1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Sedang" />

            <RadioButton
                android1:id="@+id/radio2"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Berat" />
        </RadioGroup>

        <Button
            android1:id="@+id/button1"
            android1:layout_width="110dp"
            android1:layout_height="wrap_content"
            android1:layout_alignBottom="@+id/imageView1"
            android1:layout_marginLeft="16dp"
            android1:layout_marginBottom="16dp"
            android1:layout_toLeftOf="@+id/radioGroup3"
            android1:text="Reset" />

        <TextView
            android1:id="@+id/textView14"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignLeft="@+id/textView10"
            android1:layout_below="@+id/editText6"
            android1:layout_marginTop="16dp"
            android1:text="Kegiatan"
            android1:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android1:id="@+id/button2"
            android1:layout_width="110dp"
            android1:layout_height="wrap_content"
            android1:layout_marginBottom="10dp"
            android1:layout_marginRight="30dp"
            android1:layout_alignBaseline="@+id/button1"
            android1:layout_alignBottom="@+id/button1"
            android1:layout_alignRight="@+id/imageView1"
            android1:onClick="klikhkalori"
            android1:text="Hitung" />

        <TextView
            android1:id="@+id/htambah3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_above="@+id/button1"
            android1:layout_alignRight="@+id/textView10"
            android1:layout_marginBottom="16dp"
           	android1:text=""
        	android1:visibility="gone"        	 />

        <TextView
            android1:id="@+id/htambah4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignBaseline="@+id/htambah3"
            android1:layout_alignBottom="@+id/htambah3"
            android1:layout_alignRight="@+id/htambah3"
            android1:focusable="false"
            android1:focusableInTouchMode="false"
            android1:text="TextView"
            android1:visibility="invisible" />

</RelativeLayout>
