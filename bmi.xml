<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".bmi" >

<RadioGroup
    android1:id="@+id/radioGroup3"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignParentTop="true"
    android1:layout_marginLeft="31dp"
    android1:layout_toRightOf="@+id/textView1" >

    <RadioButton
        android1:id="@+id/radiolaki"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:checked="true"
        android1:text="Laki-Laki" />

    <RadioButton
        android1:id="@+id/radiopr"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="Perempuan" />
</RadioGroup>

<TextView
    android1:id="@+id/textView1"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignParentLeft="true"
    android1:layout_alignTop="@+id/radioGroup3"
    android1:text="Jenis Kelamin"
    android1:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android1:id="@+id/textView2"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignLeft="@+id/textView1"
    android1:layout_below="@+id/radioGroup3"
    android1:layout_marginTop="16dp"
    android1:text="Umur"
    android1:textAppearance="?android:attr/textAppearanceMedium" />

<EditText
    android1:id="@+id/editText1"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignBottom="@+id/textView2"
    android1:layout_alignLeft="@+id/radioGroup3"
    android1:layout_alignRight="@+id/radioGroup3"
    android1:layout_alignTop="@+id/textView2"
    android1:ems="10"
    android1:inputType="number" >

    <requestFocus />
</EditText>

<TextView
    android1:id="@+id/textView3"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignBottom="@+id/editText1"
    android1:layout_alignParentRight="true"
    android1:text="TH" />

<TextView
    android1:id="@+id/textView4"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignLeft="@+id/textView2"
    android1:layout_below="@+id/textView2"
    android1:layout_marginTop="20dp"
    android1:text="Tinggi"
    android1:textAppearance="?android:attr/textAppearanceMedium" />

<EditText
    android1:id="@+id/editText2"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignBottom="@+id/textView4"
    android1:layout_alignLeft="@+id/editText1"
    android1:layout_alignRight="@+id/editText1"
    android1:layout_alignTop="@+id/textView4"
    android1:ems="10"
    android1:inputType="number" />

<TextView
    android1:id="@+id/textView5"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignParentRight="true"
    android1:layout_alignTop="@+id/editText2"
    android1:text="CM" />

<TextView
    android1:id="@+id/textView6"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignLeft="@+id/textView4"
    android1:layout_below="@+id/textView4"
    android1:layout_marginTop="20dp"
    android1:text="Berat"
    android1:textAppearance="?android:attr/textAppearanceMedium" />

<EditText
    android1:id="@+id/editText3"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignBottom="@+id/textView6"
    android1:layout_alignLeft="@+id/editText2"
    android1:layout_alignRight="@+id/editText2"
    android1:layout_alignTop="@+id/textView6"
    android1:ems="10"
    android1:inputType="number" />

<TextView
    android1:id="@+id/textView7"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignBaseline="@+id/textView6"
    android1:layout_alignBottom="@+id/textView6"
    android1:layout_alignRight="@+id/textView5"
    android1:text="KG" />

<Button
    android1:id="@+id/button1"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_centerVertical="true"
    android1:layout_toLeftOf="@+id/radioGroup3"
    android1:text="Reset" />

<Button
    android1:id="@+id/button2"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignBottom="@+id/button1"
    android1:layout_alignRight="@+id/editText3"
    android1:layout_marginRight="15dp"
    android1:text="Hitung" />

<TextView
    android1:id="@+id/textView8"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_below="@+id/button1"
    android1:layout_centerHorizontal="true"
    android1:layout_marginTop="60dp"
    android1:text="Large Text"
    android1:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
